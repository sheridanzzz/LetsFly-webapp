@model LetsFly.Models.Flight
@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book</h2>
@using (Html.BeginForm("Book", "Home", FormMethod.Post, new {enctype = "multipart/form-data"}))

{
    @Html.HiddenFor(m => m.FlightId)
    @Html.AntiForgeryToken()


    if (@ViewBag.Result != null)
    {
        <div class="alert alert-info">@ViewBag.Result</div>
    }
    else
    {

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FlightNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FlightNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                $ @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Duration)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration) Mins
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArrivalDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureAirport)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureAirport)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ArrivalAirport)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArrivalAirport)
            </dd>

        </dl>

        <div class="form-group">

            <input type="submit" value="Confirm" class="btn btn-success"/>

            @Html.ActionLink("Cancel", "Index", "Home", new {}, new {@class = "btn btn-danger"})
        </div>

    }
}